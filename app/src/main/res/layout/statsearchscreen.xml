<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/statsearchscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black_20"
            app:layout_scrollFlags="enterAlways"
            app:popupTheme="@style/Theme.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/searchView"
            android:orientation="horizontal">
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/searchText"
                android:hint="@string/stats_searcheg"
                android:textColor="@color/textColorPrimary"
                android:imeOptions="actionSearch"
                android:maxLength="100"
                android:inputType="text"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginBottom="@dimen/layout_margin_bottom" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSearch"
                android:src="@drawable/app_icon_search"
                android:background="@color/windowBackground"
                android:onClick="statSearch"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginBottom="@dimen/layout_margin_bottom" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Hiccores"
                android:textColor="@color/textColorPrimary" />
            <RadioButton
                android:id="@+id/ironman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ironman"
                android:textColor="@color/textColorPrimary" />
            <RadioButton
                android:id="@+id/uironman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultimate Ironman"
                android:textColor="@color/textColorPrimary" />
            <RadioButton
                android:id="@+id/hironman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hardcore Ironman"
                android:textColor="@color/textColorPrimary" />
            <RadioButton
                android:id="@+id/deadman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadman Mode"
                android:textColor="@color/textColorPrimary" />
            <RadioButton
                android:id="@+id/leagues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leagues"
                android:textColor="@color/textColorPrimary" />
            <RadioButton
                android:id="@+id/tournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tournament"
                android:textColor="@color/textColorPrimary" />
        </RadioGroup>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>